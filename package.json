{
  "name": "youtube2rss",
  "module": "src/telegram.ts",
  "type": "module",
  "scripts": {
    "build-rss": "bun --env-file=.env.dev src/build-rss.ts",
    "start": "bun --env-file=.env src/index.ts",
    "start:dev": "bun --env-file=.env.dev src/index.ts",
    "serve": "bun --env-file=.env run src/serve.ts",
    "serve:dev": "bun --env-file=.env.dev run src/serve.ts",
    "prepare": "bun --env-file=.env.dev run src/prepare.ts",
    "tests": "IS_TEST=true bun test",
    "lint": "bun biome lint",
    "lint:fix": "bun biome lint --fix",
    "format": "bun biome format",
    "format:fix": "bun biome format --write",
    "check": "bun biome check",
    "check:fix": "bun biome check --write",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:start:dev": "pm2 start ecosystem.config.cjs --env development",
    "pm2:start:prod": "pm2 start ecosystem.config.cjs --env production",
    "pm2:stop": "pm2 stop ecosystem.config.cjs",
    "pm2:restart": "pm2 restart ecosystem.config.cjs",
    "pm2:reload": "pm2 reload ecosystem.config.cjs",
    "pm2:delete": "pm2 delete ecosystem.config.cjs",
    "pm2:logs": "pm2 logs youtube2rss",
    "pm2:logs:server": "pm2 logs youtube2rss-server",
    "pm2:status": "pm2 status",
    "pm2:monit": "pm2 monit"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@libs/xml": "npm:@jsr/libs__xml",
    "@types/bun": "^1.3.8"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "adze": "^2.3.0",
    "grammy": "^1.39.3",
    "podcast": "^2.0.1",
    "youtube-dl-exec": "^3.0.30"
  },
  "trustedDependencies": [
    "es5-ext",
    "youtube-dl-exec"
  ]
}
